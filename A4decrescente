decrescente = True
anterior = int(input("Digite o proximo número da sequencia: "))

valor = 1

while valor != 0 and decrescente:
	valor = int(input("Digite um valor da sequência: "))
	if valor > anterior:
			decrescente = False
	anterior = valor
		
if decrescente: 
	print("A sequencia está em ordem decrescente!")
else:
	print("A sequencia não está em ordem decrescente!")
